<h2>Edit Todo</h2>

<%= form_with model: @todo do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :description %>
  <%= form.text_area :description %>

  <%= form.label :completed %>
  <%= form.check_box :completed %>

  <%= form.submit %>
<% end %>

<%= link_to 'Show', @todo %> |
<%= link_to 'Back to Todos', todos_path %>
